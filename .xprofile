# ~/.xprofile: executed by X
# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
umask 077
#xmodmap ~/.Xmodmap

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
if echo $PATH | grep -qvE ":$HOME/bin$" && echo $PATH | grep -qv ":$HOME/bin:"; then
		PATH="$PATH:$HOME/bin"
	fi
fi
if [ -d "$HOME/go/bin" ] ; then
	if echo $PATH | grep -qvE ":$HOME/go/bin$" && echo $PATH | grep -qv ":$HOME/go/bin:"; then
		PATH="$PATH:$HOME/go/bin"
	fi
fi
if [ -d "$HOME/.local/bin" ] ; then
	if echo $PATH | grep -qvE ":$HOME/.local/bin$" && echo $PATH | grep -qv ":$HOME/.local/bin:"; then
		PATH="$PATH:$HOME/.local/bin"
	fi
fi
if which npm > /dev/null 2>&1 ; then
	if [ -d "$HOME/node_modules/.bin" ] ; then
		if echo $PATH | grep -qvE ":$HOME/node_modules/.bin$" && echo $PATH | grep -qv ":$HOME/node_modules/.bin:"; then
			PATH="$PATH:$HOME/node_modules/.bin"
		fi
	fi
fi

# notmuch で日本語検索が出来るように (指定しないとカタカナ検索が出来ない?)
export XAPIAN_CJK_NGRAM=1
